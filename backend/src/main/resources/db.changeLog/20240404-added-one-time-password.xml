<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="202404041406-1" author="bestuser">
        <createTable tableName="one_time_password">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_email" type="varchar(255)"/>
            <column name="value" type="varchar(51)"/>
            <column name="expire_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="202404041408-1" author="bestuser">
        <sql>ALTER TABLE one_time_password
            ADD COLUMN type ENUM('EMAIL_VERIFICATION', 'PASSWORD_RESET', 'USER_UPDATE') NOT NULL</sql>
    </changeSet>
</databaseChangeLog>